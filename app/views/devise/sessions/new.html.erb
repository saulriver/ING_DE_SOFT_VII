<div id="wrapper">
        <div class="row">
            <div class="col-md-4 col-md-offset-4 box-login">
                <div class="modal-content" style="background-color:#B0E0E6;">
                    <div class="panel-heading">
                      <span><center><i class="fa fa-key fa-5x text-primary"></i></center></span>
                      <br>
                        <h1 class="page" style="color:#337ab7;"><center>Inicia Sesión</center></h1>
                    </div>
<div class="panel-body">
  <fieldset>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs" style="color:#337ab7;">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <center><%= f.button :submit, "Iniciar sesión", class:"btn btn-primary active" %></center>
  </div>
<% end %>
<br>
<div class="form-actions">
<%= link_to "Regístrate", new_user_registration_path, class: "fa fa-user fa-fw"  %>
</div>
<div class="form-actions">
<%= link_to "Olvidaste tu contraseña?", new_user_password_path, class: "fa fa-unlock-alt"  %>
</div>
</fieldset>
</div>
</div>
</div>
</div>
</div>
