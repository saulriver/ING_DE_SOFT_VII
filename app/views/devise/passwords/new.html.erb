<div id="wrapper">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 box-login">
                <div class="modal-content" style="background-color:#F08080;">
                    <div class="panel-heading">
                      <span><center><i class="fa fa-users fa-5x text-danger"></i></center></span>
                      <br>
                        <h1 class="page" style="color:#A52A2A;"><center>¿Olvidaste tu contraseña?</center></h1>
                    </div>
<div class="panel-body">
  <fieldset>
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs" style="color:#A52A2A;">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Enviarme restablecer las instrucciones de contraseña", class:"btn btn-danger active" %>
  </div>
<% end %>
<br>
<div class="form-actions">
<%= link_to "Iniciar Sesión", new_user_session_path, class: "fa fa-key", style:"color:#A52A2A;" %>
  </div>

  <div class="form-actions">
  <%= link_to "Regístrate", new_user_registration_path, class: "fa fa-user fa-fw", style:"color:#A52A2A;"%>
  </div>
</fieldset>
</div>
</div>
</div>
</div>
</div>
