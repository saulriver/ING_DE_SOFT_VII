<h1 class="text-center" style="color:#337ab7;">REGISTRO DE EGRESADOS</h1>
<br>
<br>
<div class="input-group custom-search-form">
<%=form_tag (egresados_path), method: :get do %>
<%=text_field_tag(:search, params[:search], placeholder: "Ingresa nombre")%>
<%= submit_tag ("Buscar"), style:"color:#337ab7;"%>
<%end%>
</div>
</br>
<div class="modal-content text-center">
<div class="table-responsive">
<table class="table">

<thead>
  <div class="row">
    <tr class="success">
      <th class="text-center" style="color:#337ab7;" colspan="2">Editar Egresado</th>
      <th class="text-center" style="color:#337ab7;">Nombre</th>
      <th class="text-center" style="color:#337ab7;">Apellidos</th>
      <th class="text-center" style="color:#337ab7;">Ingreso</th>
      <th class="text-center" style="color:#337ab7;">Egreso</th>
      <th class="text-center" style="color:#337ab7;">Contingente</th>
      <th class="text-center" style="color:#337ab7;">Facultad</th>
      <th class="text-center" style="color:#337ab7;">Programa</th>
      <th class="text-center" style="color:#337ab7;">Telefono</th>
      <th class="text-center" style="color:#337ab7;">Correo</th>
      <th class="text-center" style="color:#337ab7;">Direccion</th>
    </tr>
  </div>
</thead>


<% @egresados.each do |egresado|%>
<tbody>
  <div class="row">
    <tr class="text-center">
    <td colspan="2" class="warning">
    <%= link_to egresado.id, egresado_path(egresado), class:"btn btn-warning active"%></td>
    <td><%= egresado.nombre%></td>
    <td><%= egresado.apellidos%></td>
    <td><%= egresado.ingreso%></td>
    <td><%= egresado.egreso%></td>
    <td><%= egresado.contingente%></td>
    <td><%= egresado.facultad.nombre%></td>
    <td><%= egresado.programa.nombre%></td>
    <td><%= egresado.telefono%></td>
    <td><%= egresado.correo%></td>
    <td><%= egresado.direccion%></td>

    </tr>
  </div>
</tbody>
    <%end%>
  </table>

  <div class="row">
    <div class="col-sm-5">
      <div class="dataTables_info" id="dataTables-example_info" role="status" aria-live="polite">Mostrando de 1 a 10</div>
    </div>
    <div class="col-sm-6">
      <div class="dataTables_paginate paging_simple_numbers" id="dataTables-example_paginate">
        <ul class="pagination">
          <li class="paginate_button previous disabled" aria-controls="dataTables-example" tabindex="0" id="dataTables-example_previous">
            <a href="#">Previous</a></li>
            <li class="paginate_button" aria-controls="dataTables-example" tabindex="0"><a href="#" class="btn btn-warning active">1</a></li>
            <li class="paginate_button" aria-controls="dataTables-example" tabindex="0"><a href="#">2</a></li>
            <li class="paginate_button" aria-controls="dataTables-example" tabindex="0"><a href="#">3</a></li>
            <li class="paginate_button" aria-controls="dataTables-example" tabindex="0"><a href="#">4</a></li>
            <li class="paginate_button" aria-controls="dataTables-example" tabindex="0"><a href="#">5</a></li>
            <li class="paginate_button next" aria-controls="dataTables-example" tabindex="0" id="dataTables-example_next"><a href="#" class="btn btn-warning active">Next</a></li>
          </ul>
        </div>
      </div>
      <!--fin de div de casillas de numeros-->
  </div>
  </br>
  </br>
  </br>
  </div>
