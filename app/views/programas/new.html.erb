<h1 class="page-header" style="color:#337ab7;">REGISTRO DE PROGRAMAS</h1>
<div class="form-group" style="color:#337ab7;">
  <div class="modal-content">
    <div class="panel-default">
      <div class="panel-heading" style="color:#337ab7;"><i class="fa fa-id-card-o"> Agregar Programa</i>
        </div>
  <div class="panel-body">
<%= simple_form_for @programa do |f|%>
<div class="row">
  <div class="col-xs-5">
<%= f.input :codigo,
  placeholder:"Reg. SNIES"%>
</div>

<div class="col-xs-5">
  <%= f.input :nombre,
   placeholder:"Nombre Programa"%>
 </div>

 <div class="col-xs-5">
  <%= f.input :encargado,
  placeholder:"Jefe de Programa"%>
</div>

<div class="col-xs-5">
  <%= f.association :facultad, label_method: :nombre%>
</div>

<div class="col-xs-4">
  <%= f.submit 'Guardar', method: :new,
    data: { confirm: 'Guardar Programa' },
     class:"btn btn-primary active"%>
</div>

</div>
<%end%>
</div>
</div>
</div>
</div>
