<h1 class="text-center" style="color:#337ab7;">REGISTRO DE PROGRAMAS</h1>
<br>
<br>
<div class="input-group custom-search-form">
<%=form_tag (programas_path), method: :get do %>
<%=text_field_tag(:search, params[:search], placeholder: "Ingresa programa")%>
<%= submit_tag ("Buscar"), style:"color:#337ab7;"%>
<%end%>
</div>
<br>
<div class="modal-content text-center">
<div class="table-responsive">
<table class="table">

<thead>
  <div class="row">
    <tr class="success">
      <th class="text-center" style="color:#337ab7;" colspan="2">Editar Programa</th>
      <th class="text-center" style="color:#337ab7;">Reg. SNIES</th>
      <th class="text-center" style="color:#337ab7;">Programa</th>
      <th class="text-center" style="color:#337ab7;">Jefe De Programa</th>
      <th class="text-center" style="color:#337ab7;">Facultad</th>
    </tr>
  </div>
</thead>

<% @programas.each do |programa|%>

<tbody>
  <div class="row">
    <tr class="text-center">
    <td colspan="2" class="warning">
    <%= link_to programa.id, programa_path(programa), class:"btn btn-warning active"%></td>
    <td><%= programa.codigo%></td>
    <td><%= programa.nombre%></td>
    <td><%= programa.encargado%></td>
    <td><%= programa.facultad.nombre%></td>
    </tr>
  </div>
</tbody>
    <%end%>
  </table>
  <div>
    <%= paginate @programas %>
    </div>
  </div>
  </div>
  <br/>
  <br/>
  <br/>
